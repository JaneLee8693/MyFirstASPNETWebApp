@model GradeCalculatorModel;

<h4>Let's check this class!</h4>
<form method="post">
    <fieldset style="border: 2px solid #F37622; width: 700px">
        <legend>Grade Calculator (input as numeric values without %)</legend>
        <label>Assignments: </label>
        <input id="txtAssignments" asp-for="Assignments" /><br /><br />
        <label>Group Project: </label>
        <input id="txtProject" asp-for="Project" /><br /><br />
        <label>Quizzes: </label>
        <input id="txtQuizzes" asp-for="Quizzes" /><br /><br />
        <label>Exams: </label>
        <input id="txtExams" asp-for="Exams" /><br /><br />
        <label>INTEX: </label>
        <input id="txtIntex" asp-for="Intex" /><br /><br />
        <input id="btnSend" type="submit" value="Calculate the Final Grade" />
        <br />
    </fieldset>
    <div asp-validation-summary="All"></div>
</form>